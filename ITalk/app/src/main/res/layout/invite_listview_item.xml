<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/italk_logo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginVertical="8dp">

        <TextView
            android:id="@+id/invite_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/invite_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reason"
            android:textSize="15sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/invite_accept_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="5dp"
        android:text="接受"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@drawable/signin_btn_shape"/>

    <Button
        android:id="@+id/invite_reject_btn"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="5dp"
        android:text="拒绝"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:background="@drawable/red_circle_btn_shape"/>

</LinearLayout>